{
  "name": "cheese-log",
  "version": "2.0.0",
  "description": "A colorful logger with browser-/environment-dependent formatting possibilities, table printing, object depth limiting, string- and array-truncating, etc.",
  "main": "build/bundle.js",
  "types": "build/types/index.d.ts",
  "scripts": {
    "clear-build-folders": "rm -rf ./build && rm -rf ./dist",
    "transpile": "tsc",
    "fix-paths": "tsc-alias",
    "grunt": "grunt",
    "build": "sh ./build.sh",
    "dev": "yarn nodemon",
    "test": "jest"
  },
  "keywords": [
    "log",
    "logger",
    "debug",
    "messages",
    "colors",
    "ansi colors",
    "table",
    "tables",
    "rows",
    "columns",
    "limit",
    "object",
    "depth",
    "truncate",
    "strings",
    "arrays"
  ],
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maks-io/cheese-log.git"
  },
  "author": "Markus Kurzmann <markus@kurzmann.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maks-io/cheese-log/issues"
  },
  "homepage": "https://github.com/maks-io/cheese-log#readme",
  "dependencies": {
    "ansicolor": "^2.0.3",
    "capitalize-lightweight": "^1.0.2",
    "dayjs": "^1.11.13",
    "string-table": "^0.1.5",
    "util": "^0.12.5",
    "who-am-i-now": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@types/node": "^22.8.7",
    "babel-loader": "^9.2.1",
    "copy-webpack-plugin": "^12.0.2",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "terser-webpack-plugin": "^5.3.10",
    "tsc": "^2.0.4",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.6.3",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  }
}

{
  "name": "cheese-log",
  "version": "1.0.8",
  "description": "A colorful logger with browser-/environment-dependent formatting possibilities, table printing, object depth limiting, string- and array-truncating, etc.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "clear-build-folder": "rm -rf ./build",
    "transpile": "tsc",
    "fix-paths": "tsc-alias",
    "build": "yarn clear-build-folder && yarn transpile && yarn fix-paths",
    "dev": "yarn nodemon",
    "test": "jest"
  },
  "keywords": [
    "log",
    "logger",
    "debug",
    "messages",
    "colors",
    "ansi colors",
    "table",
    "tables",
    "rows",
    "columns",
    "limit",
    "object",
    "depth",
    "truncate",
    "strings",
    "arrays"
  ],
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maks-io/cheese-log.git"
  },
  "author": "Markus Kurzmann <markus@kurzmann.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maks-io/cheese-log/issues"
  },
  "homepage": "https://github.com/maks-io/cheese-log#readme",
  "dependencies": {
    "ansicolor": "^2.0.1",
    "capitalize-lightweight": "^1.0.2",
    "dayjs": "^1.11.10",
    "string-table": "^0.1.5",
    "who-am-i-now": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "tsc": "^2.0.4",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.2.2"
  }
}
